# file manager
super + e 
	pcmanfm

# firefox
super + w
	firefox

# print screen
super + q
  flameshot gui

# lock screen
super + shift + q
	betterlockscreen -l

# checker for caps lock
Caps_Lock
	/home/tsukki/.config/dunst/dunst_caps_lock.sh

# rofi or dmenu
super + shift + Return
	rofi -show drun

#
# mpd
#

# next
super + shift + p
    mpc --host localhost --port 6601 next

# prev
super + shift + o
    mpc --host localhost --port 6601 prev

# toggle
super + shift + i
    mpc --host localhost --port 6601 toggle

#
# brightness
#

# 50%
super + shift + k
    backlight_control 50 && notify-send 'Brightness is now 50%' -t 1500

# 10%
super + shift + l
    backlight_control 10 && notify-send 'Brightness is now 10%' -t 1500
